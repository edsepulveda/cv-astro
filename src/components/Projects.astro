---
import { projects } from "../constants/Resume.json";
import ProjectCard from "./ProjectCard.astro";
---

<section class="print-force flex min-h-0 flex-col gap-y-3 scroll-mb-15">
  <h2 class="text-2xl print:text-3xl font-bold">Proyectos</h2>
  <div
    class="grid grid-cols-1 gap-2.5 print:grid-cols-3 print:gap-2.5 md:grid-cols-2 lg:grid-cols-3"
  >
    {
      projects.map((project) => (
        <ProjectCard
          title={project.name}
          tags={project.tags}
          description={project.description}
          link={project.link}
          client={project.client}
          clientURL={project.clientURL}
        />
      ))
    }
  </div>
</section>

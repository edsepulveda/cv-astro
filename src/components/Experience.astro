---
import { work } from "../constants/Resume.json";
import {
  Card,
  CardContent,
  CardHeader,
} from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
---

<section class="flex min-h-0 flex-col gap-y-3">
  <h2 class="font-bold text-2xl">Experiencia</h2>
  {
    work.map((exp) => (
      <Card
        key={exp.name}
        className="py-1 px-1 border border-gray-200 dark:border-[#18181b] bg-gradient-to-br from-white to-gray-200 dark:from-[#18181b] dark:to-slate-900 hover:shadow-md transition-all duration-200"
      >
        <CardHeader>
          <div class="flex items-center justify-between gapx-2 text-base">
            <h3 class="inline-flex items-center justify-center gap-x-1 font-bold leading-tight">
              <a href={exp.url} target="_blank" class="hover:underline">
                {exp.name}
              </a>
              <span class="inline-flex ml-2.5">
                {exp.highlights.map((badge) => (
                  <Badge
                    variant={exp.badgeVariant as any}
                    className="align-middle text-xs"
                  >
                    {badge}
                  </Badge>
                ))}
              </span>
            </h3>
            <div class="text-sm tabular-nums text-gray-500 dark:text-white">
              {exp.startDate} - {exp.endDate === null ? "Actual" : exp.endDate}
            </div>
          </div>
          <h4 class="font-mono text-sm leading-tight">{exp.position}</h4>
        </CardHeader>
        <CardContent className="mt-1.5 text-sm">{exp.summary}</CardContent>
      </Card>
    ))
  }
</section>
